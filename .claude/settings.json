{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$FILE_PATH\" =~ \\.(py)$ ]] && command -v task &> /dev/null; then echo \"ðŸ” Python file edited: $(basename \"$FILE_PATH\")\"; echo \"ðŸ’¡ Run 'task check' to validate changes\"; fi"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$COMMAND\" =~ ^task\\s+(fmt|lint|mypy|check) ]] && [[ \"$EXIT_CODE\" == \"0\" ]]; then echo \"âœ… Task completed successfully\"; fi"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$COMMAND\" =~ ^(rm|mv|cp)\\s+(-rf?|--force) ]]; then echo \"âš ï¸  Destructive command detected: $COMMAND\"; exit 2; fi"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"ðŸ“ Processing request: $(date +%H:%M:%S)\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "if command -v task &> /dev/null && [[ -f Taskfile.yml ]]; then echo \"ðŸ’¡ Available tasks: task lint, task mypy, task check (runs all)\"; fi"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"ðŸ¤– Sub-agent task completed\""
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"ðŸ“¦ Context compaction triggered - consider running 'task check' if many files were edited\""
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "read:**",
      "write:src/**",
      "write:tests/**",
      "write:workspace/**",
      "write:notebooks/**",
      "write:.claude/**",
      "execute:uv",
      "execute:python",
      "execute:pytest",
      "execute:ruff",
      "execute:black",
      "execute:mypy",
      "execute:git",
      "execute:echo",
      "execute:date",
      "execute:test",
      "execute:command",
      "execute:task",
      "execute:jq",
      "execute:basename"
    ],
    "deny": [
      "write:.git/**",
      "write:*.pyc",
      "write:__pycache__/**",
      "write:.env",
      "write:*.key",
      "write:*.pem",
      "execute:sudo",
      "execute:rm -rf /",
      "execute:chmod 777"
    ]
  },
  "env": {
    "PYTHONDONTWRITEBYTECODE": "1",
    "UV_SYSTEM_PYTHON": "1"
  }
}
